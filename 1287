class Solution {
public:
    int findSpecialInteger(vector<int>& arr) {
        int count = 1;
        for(int i=1; i<arr.size(); i++){
            if(arr[i]!=arr[i-1]){
                count = 1;
            }
            else{
                count++;
            }
            if(count>(arr.size()/4)){
                count = arr[i];
                break;
            }
        }
        return count;
    }
};
