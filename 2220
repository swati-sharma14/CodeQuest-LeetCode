class Solution {
public:
    int minBitFlips(int start, int goal) {
        int ans = 0;
        string a = bitset<32>(start).to_string();
        string b = bitset<32>(goal).to_string();
        for(int i=0; i<32; i++){
            if(a[i]!=b[i]){
                ans++;
            }
        }
        return ans;
    }
};
