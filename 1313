class Solution {
public:
    vector<int> decompressRLElist(vector<int>& nums) {
        int length = 0;
        for(int i=0; i<(nums.size());i+=2){
            length += nums[i];
        }
        vector<int> ans(length,0);
        int l = 0;
        for(int i=1; i<(nums.size()); i+=2){
            int k = nums[i-1];
            for(int j=l;j<k+l;j++){
                ans[j] = nums[i];
            }
            l+=k;
        }
        return ans;
    }
};
