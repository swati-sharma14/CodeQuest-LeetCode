class Solution {
public:
    bool isPowerOfFour(int n) {
        if(n==1){
            return true;
        }
        if(n<=7 && n!=4){
            return false;
        }
        int num=0;
        int i=0;
        while(n>0){
            num+=((n%2) * (pow(10,i)));
            i++;
            n/=2;
        }
        if((i-1)%2==0){
            int a = pow(10,i-1);
            num-=a;
            if(num==0){
                return true;
            }
        }
        return false;
    }
};
