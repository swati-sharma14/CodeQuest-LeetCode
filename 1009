class Solution {
public:
    int bitwiseComplement(int n) {
        if(n==0){
            return 1;
        }
        int ans = 0;
        int a = 0;
        while(n!=0){
            int b = n%2;
            n/=2;
            if(b==0){
                ans+=(pow(2,a));
            }
            a++;
        }
        return ans;
    }
};
